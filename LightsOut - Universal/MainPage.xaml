<Page
    x:Class="LightsOut___Universal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightsOut___Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel RequestedTheme="Dark" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:Name="boardCanvas" Width="500" Height="500" 
                RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="0,30" Background="White" />
        <Button x:Name="newGameButton" Height="61" Width="120" Click="newGameButton_Click" 
                Content="New Game" RelativePanel.AlignLeftWith="boardCanvas" RelativePanel.Below="boardCanvas" />
        <Button x:Name="aboutButton" HorizontalAlignment="Center" Height="61" Width="120" Click="aboutGameButton_Click" 
                Content="About" RelativePanel.AlignRightWith="boardCanvas" RelativePanel.Below="boardCanvas" />
    </RelativePanel>
</Page>
